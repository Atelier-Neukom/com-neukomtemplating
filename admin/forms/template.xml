<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="id"
			type="number"
			label="ID"
			default="0"
			class="readonly"
			readonly="true"
		/>
		<field
			name="name"
			type="text"
			label="Name"
			size="40"
			required="true"
		 />
		<field
			name="template"
			type="textarea"
			rows="10"
			cols="5"
			filter="raw"
			label="Template"
			required="true"
		 />
	</fieldset>
</form>